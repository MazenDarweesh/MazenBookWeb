@model List<Company>//use pascal case with Model to access all the data  //with @ we can write c# in html !! //take the data from the controller as the list of category
<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Company List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Company" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>  Create New Company
            </a>
        </div>
    </div>

    <table id="tblData" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>StreetAddress</th>
                <th>City</th>
                <th>State</th>
                <th>PostalCode</th>
                <th>PhoneNumber</th>.
                <th> </th>
            </tr>
        </thead>        
    </table>

</div>
@section Scripts{
    <script src="~/js/Company.js"></script>
}